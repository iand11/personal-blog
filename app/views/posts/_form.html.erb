<div class="container">
  <div class="post-form">
    <%= form_for @post do |f| %>
      <p>
        <span class="label"><%= f.label :title  %></span> <br>
        <%= f.text_area :title, size:"40x1" %>
      </p>
      <p>
        <span class="label"><%= f.label :body  %></span>  <br>
        <%= f.cktext_area :body, size:"100x10" %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end  %>
  </div>
</div>