<div class="container">
  <div class="post-form">
    <%= form_for @post do |f| %>
      <p>
        <%= f.label :title %> <br>
        <%= f.text_area :title, size:"40x1" %>
      </p>
      <p>
        <%= f.label :body %>  <br>
        <%= f.text_area :body, size:"100x10" %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end  %>
  </div>
</div>