<div class="container">
  <%= render partial: '/layouts/recent_posts' %>

  <img class="post-pic-show" src="https://unsplash.it/500/500/?image=1033" alt="ooppsss">
  <h1 class="post-show-title"><%= @post.title %></h1>
  <p class="created_at"><%= @post.created_at.strftime("%A, %d %b %Y") %></p>
  <p class="post-body-show"><%= @post.body %></p>


  <div class="post-counter">
  <% case @post.id %>
    <% when 1 %>
      <span class="current-post-number post-number"><%= @post.id %> /</span><span class="all-post-number post-number"> <%= @all_posts.length %></span>
      <%= render partial: "/posts/arrow_forward" %>
    <% when @all_posts.length %>
       <%= render partial: "/posts/arrow_back" %>
      <span class="current-post-number post-number"><%= @post.id %> /</span><span class="all-post-number post-number"> <%= @all_posts.length %></span>
    <% else %>
     <%= render partial: "/posts/arrow_back" %>
      <span class="current-post-number post-number"><%= @post.id %> /</span><span class="all-post-number post-number"> <%= @all_posts.length %></span>
      <%= render partial: "/posts/arrow_forward" %>
  <% end  %>
  </div>

</div>